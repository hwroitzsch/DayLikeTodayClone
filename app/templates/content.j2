{% extends "base.j2" %}
{% block content %}

	<div class="container-fluid">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h1>Day Like Today Clone</h1>
		</div>
		<div class="col-md-2"></div>
	</div>


	<div id="attribution-area">
		<div>
			<a href="http://el.dbpedia.org/">
				<img class="attribution-logo" src="static/img/DBpediaLogo.svg" alt="DBPedia">
			</a>
		</div>
		<div>
			<a href="https://www.wikipedia.org/">
				<img class="attribution-logo" src="static/img/wiki.png" alt="wikipedia">
			</a>
		</div>
	</div>

	

	<div id="chooser-area">
		<div>
			<a class="btn" href="https://github.com/okfngr/DayLikeToday.git">
				<img src="static/img/github-icon.png"> GitHub Project
			</a>
		</div>
		<div>
			<label>Month</label>
			<select id="month-chooser" class="mini-input">
				{% for month in months %}
				<option value="{{loop.index}}">{{month}}</option>
				{% endfor %}
			</select>
		</div>
		<div>
			<label>Day</label>
			<select id="day-chooser" class="mini-input">
				{% for day in days %}
				<option value="{{loop.index}}">{{day}}</option>
				{% endfor %}
			</select>
		</div>
		<div>
			<label>Language</label>
			<select id="language-chooser" class="mini-input">
				{% for language in languages %}
				<option value="{{loop.index}}">{{language}}</option>
				{% endfor %}
			</select>
		</div>
		<div>
			<form>
				<button class="btn btn-primary">What happened?!</button>
			</form>
		</div>
	</div>


	<div id="timeline-embed"></div>
	<script type="text/javascript">
		var timeline_config = {
			width:              '100%',
			height:             '600',
			source:             'path_to_json/or_link_to_googlespreadsheet',
			embed_id:           'timeline-embed',               //OPTIONAL USE A DIFFERENT DIV ID FOR EMBED
			start_at_end:       false,                          //OPTIONAL START AT LATEST DATE
			start_at_slide:     '4',                            //OPTIONAL START AT SPECIFIC SLIDE
			start_zoom_adjust:  '3',                            //OPTIONAL TWEAK THE DEFAULT ZOOM LEVEL
			hash_bookmark:      true,                           //OPTIONAL LOCATION BAR HASHES
			font:               'Bevan-PotanoSans',             //OPTIONAL FONT
			debug:              true,                           //OPTIONAL DEBUG TO CONSOLE
			lang:               'fr',                           //OPTIONAL LANGUAGE
			maptype:            'watercolor',                   //OPTIONAL MAP STYLE
			css:                'path_to_css/timeline.css',     //OPTIONAL PATH TO CSS
			js:                 'path_to_js/timeline-min.js'    //OPTIONAL PATH TO JS
		}
	</script>


	<div id="authors-area" class="flex-area">
		<div><label>Authors:</label></div>
		<div><span>Christian GÃ¼nther</span></div>
		<div><span>Christopher Rohrlack</span></div>
		<div><span>Hans-Werner Roitzsch</span></div>
		<div><span>Jonny Leuschner</span></div>
		<div><span>Johannes Reger</span></div>
		<div><span>Christian Wille</span></div>
	</div>
{% endblock %}